

<div class="banner d-flex justify-content-center">
  <h1>Avaliable Flats</h1>
</div>
<div class="container">
  <div class="row" >
    <% @flats.each do |flat| %>
      <div class="col-sm-4 mt-3">
        <div class="drone-cards mx-3 h-100">
          <img src="https://images.unsplash.com/photo-1591825729269-caeb344f6df2?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mjl8fGx1eHVyeSUyMGFwYXJ0bWVudHxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=800&q=60">
          <div class="drone-cards-info">
            <%= link_to flat.title, flat_path(flat), class: "text-decoration-none" %>
            <p><%= flat.description %></p>
          <!-- <p>Short description here!</p> -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

